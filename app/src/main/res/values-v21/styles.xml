<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="toolBar">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:background">@color/toolBarColor_default</item>
                <item name="android:textSize">20sp</item>
                <item name="android:translationZ">4dp</item>
                <item name="android:elevation">4dp</item>
        </style>

        <style name="floating_button">
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_marginBottom">@dimen/dp_15</item>
                <item name="android:layout_marginRight">@dimen/dp_15</item>
                <item name="android:layout_alignParentRight">true</item>
                <item name="android:layout_alignParentBottom">true</item>
                <item name="android:translationZ">3dp</item>
        </style>


</resources>