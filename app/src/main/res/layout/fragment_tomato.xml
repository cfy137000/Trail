<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fengyao.trail.widget.CircleTimerView
        android:id="@+id/ctv_tomato_clock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_tomato_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/red"
        android:text="@string/tomato_clock_start" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_tomato_clock_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/red"
        android:text="@string/tomato_clock_stop" />
</LinearLayout>